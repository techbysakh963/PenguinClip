{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "penguinclip",
  "version": "0.9.0",
  "identifier": "org.penguinclip.clipboard-history",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false
    },
    "windows": [
      {
        "title": "PenguinClip",
        "label": "main",
        "width": 360,
        "height": 480,
        "minWidth": 300,
        "minHeight": 300,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "focus": true
      },
      {
        "title": "Setup - PenguinClip",
        "label": "setup",
        "width": 550,
        "height": 650,
        "resizable": true,
        "minWidth": 400,
        "minHeight": 500,
        "decorations": true,
        "transparent": false,
        "visible": false,
        "skipTaskbar": false,
        "alwaysOnTop": false,
        "center": true,
        "focus": true
      },
      {
        "title": "Settings - PenguinClip",
        "label": "settings",
        "width": 480,
        "height": 580,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "skipTaskbar": false,
        "alwaysOnTop": false,
        "center": true,
        "focus": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' https://media.tenor.com https://media1.tenor.com data: blob:; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self' https://g.tenor.com https://api.tenor.com; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "category": "Utility",
    "shortDescription": "Secure Clipboard History Manager for Linux",
    "longDescription": "PenguinClip is a security-hardened clipboard history manager for Linux. A hardened fork of Windows-11-Clipboard-History-For-Linux, built with Tauri, React, and Rust.",
    "linux": {
      "deb": {
        "depends": [
          "xclip",
          "xdotool",
          "wl-clipboard",
          "acl",
          "polkitd",
          "pkexec",
          "libwebkit2gtk-4.1-0 | libwebkit2gtk-4.0-37",
          "libgtk-3-0",
          "libayatana-appindicator3-1 | libappindicator3-1"
        ],
        "files": {
          "/usr/bin/penguinclip": "bundle/linux/wrapper.sh",
          "/etc/udev/rules.d/99-penguinclip-input.rules": "bundle/linux/99-penguinclip-input.rules",
          "/usr/share/applications/penguinclip.desktop": "bundle/linux/penguinclip.desktop",
          "/usr/share/icons/hicolor/128x128/apps/penguinclip.png": "icons/128x128.png",
          "/usr/share/icons/hicolor/256x256/apps/penguinclip.png": "icons/icon.png"
        },
        "postInstallScript": "bundle/linux/postinst.sh",
        "preRemoveScript": "bundle/linux/postrm.sh"
      },
      "rpm": {
        "depends": [
          "xclip",
          "xdotool",
          "wl-clipboard",
          "acl",
          "polkit",
          "webkit2gtk4.1",
          "gtk3",
          "libayatana-appindicator-gtk3"
        ],
        "postInstallScript": "bundle/linux/postinst.sh",
        "preRemoveScript": "bundle/linux/postrm.sh"
      }
    },
    "resources": ["bundle/linux/99-penguinclip-input.rules"]
  }
}
